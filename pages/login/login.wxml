<view class='container'>
    <view class="logoBox">
    <view class="logo">
      <image class='loginIcon' src='{{logoIcon}}'></image>
    </view>
  </view>
    <form>
      <view class="comBox">
        <input type="text" name="comid" bindinput='comid' value='{{comid}}' placeholder="商家编号" />
      </view>
      <view class="mobileBox">
        <input type="text" name="mobile" bindinput='mobile' value='{{mobile}}' placeholder="输入帐号" />
      </view>
      <view class="pwdBox">
        <input type="password" name="pwd" bindinput='pwd' value='{{pwd}}' placeholder="输入密码" />
      </view>
      <button bindtap='login' class="login">登录</button>
    </form>
</view>


