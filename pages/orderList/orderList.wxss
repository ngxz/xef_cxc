page,
.page,
.page__bd{
    height: 100%;
    background: #f1f1f1;
    font-family:"微软雅黑";
    font-size: 14px;
}
.page__bd{
    padding-bottom: 0;
}

 
    .navbar{
      flex: none;  
      display: flex;  
      background: #fff;  
      margin-bottom: 10rpx;
      font-size: 14px;
    }  
    .navbar .item{  
      position: relative;  
      flex: auto;  
      text-align: center;  
      line-height: 90rpx;
      font-size: 14px;  
    }  
    .navbar .item.active{  
      color: #e53831;  
    }  
    .navbar .item.active:after{  
      content: "";  
      display: block;  
      position: absolute;  
      bottom: 0;  
      left: 0;  
      right: 0;  
      height: 4rpx;  
      background: #e53831;  
    }  

.page-group {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.zhangdan_list{ 
  height:auto; 
  border-radius:8rpx; 
  border:1px solid #f5f5f5; 
  background-color:#FFF; 
  margin-bottom:20rpx;
}

/*编号*/
.order_no{width: 98%;margin: 0 auto;overflow: hidden;height: 40px;line-height: 40px;font-size: 14px;}
.order_no .no{font-size: 14px;}
.order_no .time{color: #999;}
/*图片价格*/
.order_img{margin: 0 auto;width: 100%;height: 120px;overflow: hidden;background-color: #eee;}
 .order_img .img{width: 80%;} 
.order_img .img image{float: left;height:80px;width: 80px;margin-top: 20px;margin-left: 20px;margin-right: 8px;}
.order_img .name{float: left;margin-top: 20px;width:57%;font-size: 13px;}
.price{font-size: 13px;text-align: right;margin-top: 50px;}
.price .price_old{color: #666;text-decoration:line-through;}
.price .count{float: right;}
/*买家信息*/
.order_customer{width: 98%;margin: 0 auto;height: 2.5rem;line-height: 2.5rem;font-size: 13px;}
.price_all{font-size:13px;}
/*地址*/
.order_address{overflow: hidden;width: 98%;margin: 0 auto;height: 45px;}
.order_address image{height: 22px;width: 22px;margin-top: 8px;margin-right: 5px;}
.order_address .address{width: 86%;height: 40px;vertical-align: middle;line-height: 40px;font-size: 13px;}
/*电话*/
.order_phone{overflow: hidden;width: 98%;margin: 0 auto;height: 2.5rem;line-height: 2.5rem;}
.order_phone image{height: 22px;width: 22px;margin-top: 8px;margin-right: 5px;}
.tell{font-size: 13px;}
.order_phone .status{color: #dd3461;}
.order_phone .status input{height: 1.8rem;width: 5rem;background-color: #fff;border-radius: 0.4rem;border: 2px solid #e20000;color: #e20000;font-size: 13px;}