/* pages/goodsList/goodsList.wxss */
page,
.page,
.page__bd{
    height: 100%;
    background: #f1f1f1;
    font-family:"微软雅黑";
}
.page__bd{
    padding-bottom: 0;
}
    .navbar{
      flex: none;  
      display: flex;  
      background: #fff;  
      margin-bottom: 10rpx;
    }  
    .navbar .item{  
      position: relative;  
      flex: auto;  
      text-align: center;  
      line-height: 90rpx;
      font-size: 13px;  
    }  
    .navbar .item.active{  
      color: #e53831;  
    }  
    .navbar .item.active:after{  
      content: "";  
      display: block;  
      position: absolute;  
      bottom: 0;  
      left: 0;  
      right: 0;  
      height: 4rpx;  
      background: #e53831;  
    }  

.page-group {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.zhangdan_list{ 
  height:auto; 
  border-radius:8rpx; 
  border:1px solid #f5f5f5; 
  background-color:#FFF; 
  margin-bottom:20rpx;
}

/*商品列表*/
.zhangdan_list .thumb{height: 100px;width: 100px;margin: 10px;}
.goodsList{overflow: hidden;}
.content2{margin-top: 10px;width: 60%;}
.goodsTitle{width:100%;font-size: 13px;}
.price{margin-top: 5px;font-size: 13px;}
/*按钮*/
.btnBox{width: 100%;height: 33px;margin-top: 20px;}
.btnBox button{margin-right: 8px;font-size: 12px;}